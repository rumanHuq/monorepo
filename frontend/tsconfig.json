{
  "extends": "../tsconfig",
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "src/*": [
        "./src/*"
      ],
      "storybook/*": [
        "./.storybook/*"
      ],
      "tests/*": [
        "./__tests__/*"
      ]
    }
  }
}
