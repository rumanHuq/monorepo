{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "paths": {
      ".storybook/*": [
        "./.storybook/*"
      ],
      "@/*": [
        "./src/*"
      ],
    },
    "target": "es5",
    "allowJs": true,
    "module": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "../tsconfig",
  "include": [
    ".eslintrc.js",
    "next-env.d.ts",
    "*.js",
    "**/**/*.ts",
    "**/**/*.tsx"
  ]
}
