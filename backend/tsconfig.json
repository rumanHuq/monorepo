{
  "extends": "../tsconfig.json",
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "webpack-env",
      "jest",
      "node"
    ],
    "lib": [
      "es5",
      "es2015.promise",
      "es2017",
      "es6",
      "esnext"
    ]
}
