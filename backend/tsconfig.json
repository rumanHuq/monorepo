{
  "extends": "../tsconfig",
  "include": [
    "**/*.ts",
    "./.eslintrc.js",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "es5",
      "es2015.promise",
      "es2017",
      "es6",
      "esnext"
    ]
  }
}
